                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                  </ul>
                </div>

                
                -->

                <a asp-controller="Picture" asp-action="Delete" asp-route-id="@item.Id" class="ms-auto fs-4 text-decoration-none">...</a>


                <img src="@item.ImagePath" class="card-img-top my-2" alt="@item.Caption">
                <hr />
                <div class="card-body p-1 text-center">
                    <h4 class="caption card-title fw-bold" style="color: black">@item.Caption</h4>
                    <p class="my-1 lh-1 small fst-italic">@item.UserEmail</p>
                    <p class="my-1 lh-1 small fst-italic">@item.TimeStamp</p>
                    <a class="btn btn-primary" asp-action="makePublic" asp-route-id="@item.Id">Make Public</a>
                </div>
            </div>
        } 
    </div>
}


